<%- include("partials/header"); -%>
  <h1>Compose</h1>
  <form action="/compose" method="post">
    <div class="form-group">
      <label for="inputPostTitle">Title</label>
      <input type="text" name="postTitle" class="form-control" id="inputPostTitle">
    </div>
    <div class="form-group">
      <label for="inputPost">Post</label>
      <textarea name="postBody" class="form-control" id="inputPost" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
  </form>
<%- include("partials/footer"); -%>
